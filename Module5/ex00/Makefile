################################################################################
#                                     CONFIG                                   #
################################################################################
CXX = c++                                  
CXXFLAGS = -Wall -Werror -Wextra -g -std=c++98

TARGET = bureaucrat                 
SRC = main.cpp      \
	  Bureaucrat.cpp

################################################################################
#                                  RULES                                       #
################################################################################

all: $(TARGET)

$(TARGET): $(SRC)
	@$(CXX) $(CXXFLAGS) $^ -o $@

clean: 
	@rm -f $(TARGET)

################################################################################
#                                  COLORS                                      #
################################################################################

RED			= \033[0;31m
GREEN		= \033[0;32m
RESET		= \033[0m
MARK		= $(GREEN)âœ”$(RESET)
EXECUTED	= $(GREEN)Executed$(RESET)

################################################################################
#                                 MESSAGES                                     #
################################################################################

READY		= $(MARK) $(NAME)		$(EXECUTED)


.PHONY: all clean
